<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="430dp"
    android:orientation="vertical"
    android:background="@drawable/round_background_popup"
    tools:context=".Activity.Pay.Qr_popupActivity">

    <LinearLayout
        android:id="@+id/ZeropayLayout"
        android:layout_width="match_parent"
        android:layout_height="385dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/Store_Name_Qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text=" TEST CAFE"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/QrImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/text_Qr_zero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="QR코드를 통해결제 완료 후,&#10;'결제확인' 버튼을 눌러주세요."
            android:textColor="@color/black"
            android:textSize="20dp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/PayCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_button_left_c1c1c1"
            android:textSize="18dp"
            android:text="결제 취소"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/PayRequest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_button_right_eb5061"
            android:textSize="18dp"
            android:text="결제 확인"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>