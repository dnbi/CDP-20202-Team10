<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Waiting.Waiting_orderActivity"
    android:orientation="vertical"
    android:background="#F2F2F2"
    android:theme="@style/AppTheme">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#323132"
        android:fontFamily="@font/notosans_black"
        android:gravity="center"
        android:text="번호표 주문"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="120dp"
                app:srcCompat="@drawable/noti_black" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="60dp"
                android:gravity="center"
                android:text="문자로 수신하신&#10;번호표 주문번호를 입력해주세요"
                android:textColor="@color/black"
                android:textSize="26dp" />

            <EditText
                android:id="@+id/order_waitingNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="200dp"
                android:editable="false"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>
    </FrameLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/ordernumberPad_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_numberpad"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:tag="numberPad_1"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ordernumberPad_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_numberpad"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:tag="numberPad_2"
                android:text="2"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ordernumberPad_3"
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_numberpad"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:tag="numberPad_3"
                android:text="3"
                android:textAlignment="center"
                android:textColor="@color/black"

                android:textSize="20dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/ordernumberPad_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_numberpad"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:tag="numberPad_4"
                android:text="4"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ordernumberPad_5"
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_numberpad"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:tag="numberPad_5"

                android:text="5"
                android:textAlignment="center"
                android:textColor="@color/black"

                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ordernumberPad_6"
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_numberpad"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:tag="numberPad_6"

                android:text="6"
                android:textAlignment="center"
                android:textColor="@color/black"

                android:textSize="20dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/ordernumberPad_7"
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_numberpad"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:tag="numberPad_7"

                android:text="7"
                android:textAlignment="center"
                android:textColor="@color/black"

                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ordernumberPad_8"
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_numberpad"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:tag="numberPad_8"

                android:text="8"
                android:textAlignment="center"
                android:textColor="@color/black"

                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ordernumberPad_9"
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_numberpad"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:tag="numberPad_9"
                android:text="9"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/ordernumberPad_no1"
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_numberpad"
                android:clickable="false"
                android:focusable="true"
                android:gravity="center"
                android:tag="numberPad_no1"
                android:textAlignment="center"

                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ordernumberPad_0"
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_numberpad"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:tag="numberPad_0"

                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/black"

                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ordernumberPad_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_numberpad"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:src="@drawable/ic_backspace_black_24dp"
                android:tag="numberPad_10"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/couponLayout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/couponLayout_1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/waiting_order_btnCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/ripple_light_gray2_c1c1c1"
            android:text="취소"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/waiting_order_btnFinish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/ripple_black"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>