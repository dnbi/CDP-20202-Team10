<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/round_background_popup"
    tools:context=".Activity.Waiting.Waiting_popup">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="안내"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/waiting_people_icon" />

    <TextView
        android:id="@+id/waiting_popup_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:bufferType="spannable"
        android:text="현재 대기 인원이 많아 주문시&#10;약 30분 ~ 1시간 정도 소요됩니다"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/waiting_popup_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:bufferType="spannable"
        android:gravity="center"
        android:text="번호표 받기를 선택하시면&#10;차례가 되면 문자로 알려드립니다"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/waiting_popup_to_nopay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_null_gray"
                style="?android:attr/borderlessButtonStyle" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/waiting_number" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="대기번호표 받기"
                android:textColor="#4B4B4B"
                android:textSize="20dp" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="140dp"
            android:background="#717171" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/waiting_popup_to_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_null_gray"
                style="?android:attr/borderlessButtonStyle" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/waiting_order_go" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView7"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="주문 진행하기"
                android:textColor="#4B4B4B"
                android:textSize="20dp" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/waiting_popup_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/round_button_eb5061"
        android:text="취소"
        android:textColor="@color/white"
        android:textSize="20dp" />

</LinearLayout>