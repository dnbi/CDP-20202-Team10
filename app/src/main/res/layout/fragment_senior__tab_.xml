<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".Fragment.Senior_Tab_Fragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:horizontalSpacing="25dp"
            android:verticalSpacing="25dp"
            android:numColumns="2" />

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="bottom|center"
            android:layout_margin="16dp"
            android:src="@drawable/icon_arrow_dropdown_circle"
            fab:fab_colorNormal="@color/transparent"
            fab:fab_colorPressed="@color/transparent"
            fab:fab_colorRipple="@color/transparent"/>

    </FrameLayout>

</FrameLayout>