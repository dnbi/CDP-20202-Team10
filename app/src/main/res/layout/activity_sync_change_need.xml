<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/round_background_popup"
    android:orientation="vertical"
    tools:context=".Activity.Admin.SyncChangeNeedActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/warning_icon_card_fail"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/warning_triangle_icon_red" />

        <TextView
            android:id="@+id/sync_change_textview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="변경사항이 있습니다"
            android:textColor="@color/black"
            android:textSize="20dp"
            />

        <LinearLayout
            android:background="@drawable/round_stroke_linear_white"
            android:layout_marginVertical="30dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/text_sever_version"
                android:textSize="20dp"
                android:text="서버: 2019-07-23 23:01"
                android:textColor="@color/red"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/text_current_version"
                android:textSize="20dp"
                android:text="기기: 2019-07-21 20:52"
                android:textColor="#323232"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/sync_change_textview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:bufferType="spannable"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:text="동기화를 진행 하시겠습니까?"
            android:textColor="#323232"
            android:textSize="20dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sync_change_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/round_button_left_c1c1c1"
            android:text="취소"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/sync_change_btn_request"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/round_button_right_3978c1"
            android:text="동기화"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>