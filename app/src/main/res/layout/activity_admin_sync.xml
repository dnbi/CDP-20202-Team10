<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Admin.Admin_syncActivity"
    android:background="#F8F8F8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="30dp">

        <ImageButton
            android:id="@+id/admin_main_btn_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_pass_left" />

        <TextView
            android:id="@+id/textView4manage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:gravity="center"
            android:text="데이터 동기화"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <ImageView
        android:src="@drawable/data_cloud_icon1"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:background="@drawable/round_stroke_linear"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingVertical="15dp"
        android:paddingHorizontal="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:textSize="20dp"
            android:text="마지막 동기화"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sync_status_adminSync"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="2019-07-20 23:01:03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:text="동기화 버튼을 눌러\n서버와의 데이터 동기화를 시작합니다"
        android:textSize="20dp"
        android:lineSpacingExtra="7dp"
        android:textColor="#323232"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/sync_request_btn"
        android:layout_marginTop="100dp"
        android:paddingHorizontal="150dp"
        android:paddingVertical="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:background="@drawable/rounded_sync_btn"
        android:text="동기화"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/borderlessButtonStyle"/>
</LinearLayout>