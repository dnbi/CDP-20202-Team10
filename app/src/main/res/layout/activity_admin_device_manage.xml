<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_main_rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/admin_background_white"
    android:orientation="vertical"
    tools:context=".Activity.Admin.Admin_deviceManageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/admin_manage_btn_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="20dp"
            android:layout_weight="3"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/ic_pass_left"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="관리자 메뉴"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView4manage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center"
            android:text="기기관리"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/admin_btn_sync_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_white_nonstroke">

            <Button
                android:id="@+id/admin_btn_sync"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="20dp"
                android:gravity="left|center_vertical"
                android:padding="20dp"
                android:textSize="25dp"
                tools:visibility="visible"
                android:background="@drawable/ripple_null_gray"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/admin_btn_sync_Image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:paddingVertical="22dp"
                    android:paddingRight="-10dp"
                    app:srcCompat="@drawable/admin_sync1" />

                <TextView
                    android:id="@+id/admin_btn_sync_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="데이터 동기화"
                    android:textColor="#323232"
                    android:textSize="20dp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/admin_btn_home_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_white_nonstroke">

            <Button
                android:id="@+id/admin_btn_home"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="20dp"
                android:gravity="left|center_vertical"
                android:padding="20dp"
                android:textSize="30dp"
                tools:visibility="visible"
                android:background="@drawable/ripple_null_gray"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/admin_btn_home_Image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:paddingVertical="22dp"
                    android:paddingRight="-10dp"
                    app:srcCompat="@drawable/admin_home1" />

                <TextView
                    android:id="@+id/admin_btn_home_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="기본 홈 설정"
                    android:textColor="#323232"
                    android:textSize="20dp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/admin_btn_screen_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_white_nonstroke">

            <Button
                android:id="@+id/admin_btn_screen"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="20dp"
                android:gravity="left|center_vertical"
                android:padding="20dp"
                android:textSize="30dp"
                tools:visibility="visible"
                android:background="@drawable/ripple_null_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/admin_btn_screen_Image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:paddingVertical="22dp"
                    android:paddingRight="-10dp"
                    app:srcCompat="@drawable/admin_screen1" />

                <TextView
                    android:id="@+id/admin_btn_screen_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="화면 끄기"
                    android:textColor="#323232"
                    android:textSize="20dp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/admin_btn_theme_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_white_nonstroke">

            <Button
                android:id="@+id/admin_btn_theme"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="20dp"
                android:gravity="left|center_vertical"
                android:padding="20dp"
                android:textSize="30dp"
                tools:visibility="visible"
                android:background="@drawable/ripple_null_gray"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/admin_btn_theme_Image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:paddingVertical="22dp"
                    android:paddingRight="-10dp"
                    app:srcCompat="@drawable/admin_theme1" />

                <TextView
                    android:id="@+id/admin_btn_theme_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="테마"
                    android:textColor="#323232"
                    android:textSize="20dp" />
            </LinearLayout>

        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="60dp"
            android:layout_weight="7"
            />
    </LinearLayout>

</LinearLayout>