<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/admin_main_rootLayout"
    tools:context=".Activity.Admin.Admin_MainActivity"
    android:background="@color/admin_background_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="30dp">

        <TextView
            android:id="@+id/admin_main_btn_left"
            android:text="메인메뉴"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="20dp"
            android:layout_weight="3"
            android:background="?android:attr/selectableItemBackground"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_pass_left" />

        <TextView
            android:id="@+id/textView_Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center"
            android:text="관리자 메뉴"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/admin_btn_user_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_white_nonstroke">

            <Button
                android:id="@+id/admin_btn_user"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawablePadding="20dp"
                android:gravity="left|center_vertical"
                android:padding="20dp"
                android:textSize="30dp"
                tools:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/admin_btn_user_Image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:paddingVertical="22dp"
                    android:paddingRight="-10dp"
                    app:srcCompat="@drawable/admin_user1" />

                <TextView
                    android:id="@+id/admin_btn_user_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="내 계정"
                    android:textColor="#323232"
                    android:textSize="20dp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/admin_btn_manage_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_white_nonstroke">

            <Button
                android:id="@+id/admin_btn_manage"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawablePadding="20dp"
                android:gravity="left|center_vertical"
                android:padding="20dp"
                android:textSize="30dp"
                tools:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/admin_btn_manage_Image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:paddingVertical="22dp"
                    android:paddingRight="-10dp"
                    app:srcCompat="@drawable/admin_manage1" />

                <TextView
                    android:id="@+id/admin_btn_manage_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="기기관리"
                    android:textColor="#323232"
                    android:textSize="20dp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/admin_btn_info_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_white_nonstroke">

            <Button
                android:id="@+id/admin_btn_info"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawablePadding="20dp"
                android:gravity="left|center_vertical"
                android:padding="20dp"
                android:textSize="30dp"
                tools:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/admin_btn_info_Image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:paddingVertical="22dp"
                    android:paddingRight="-10dp"
                    app:srcCompat="@drawable/admin_info1" />

                <TextView
                    android:id="@+id/admin_btn_info_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="사업자 정보확인"
                    android:textColor="#323232"
                    android:textSize="20dp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/admin_btn_terms_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_white_nonstroke">

            <Button
                android:id="@+id/admin_btn_terms"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawablePadding="20dp"
                android:gravity="left|center_vertical"
                android:padding="20dp"
                android:textSize="30dp"
                tools:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/admin_btn_terms_Image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:paddingVertical="22dp"
                    android:paddingRight="-10dp"
                    app:srcCompat="@drawable/admin_terms1" />

                <TextView
                    android:id="@+id/admin_btn_terms_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="약관 및 정책"
                    android:textColor="#323232"
                    android:textSize="20dp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/admin_btn_customerservice_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_white_nonstroke">

            <Button
                android:id="@+id/admin_btn_customerservice"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawablePadding="20dp"
                android:gravity="left|center_vertical"
                android:padding="20dp"
                android:textSize="30dp"
                tools:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/admin_btn_customerservice_Image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:paddingVertical="22dp"
                    android:paddingRight="-10dp"
                    app:srcCompat="@drawable/admin_customerservice1" />

                <TextView
                    android:id="@+id/admin_btn_customerservice_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="고객센터"
                    android:textColor="#323232"
                    android:textSize="20dp" />
            </LinearLayout>

        </FrameLayout>


        <FrameLayout
            android:id="@+id/admin_btn_logout_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_white_nonstroke">

            <Button
                android:id="@+id/admin_btn_logout"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawablePadding="20dp"
                android:gravity="left|center_vertical"
                android:padding="20dp"
                android:textSize="30dp"
                tools:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/admin_btn_logout_Image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:paddingVertical="22dp"
                    android:paddingRight="-10dp"
                    app:srcCompat="@drawable/admin_logout1" />

                <TextView
                    android:id="@+id/admin_btn_logout_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="로그아웃"
                    android:textColor="#323232"
                    android:textSize="20dp" />
            </LinearLayout>

        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_weight="5" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </LinearLayout>

</LinearLayout>