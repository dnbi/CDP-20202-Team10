<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dip"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/round_background_popup"
    android:orientation="vertical"
    tools:context=".Activity.Pay.CouponReceipt.CouponComplete_Activity">

    <LinearLayout
        android:id="@+id/couponLayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="7">


        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="포인트 적립이 완료되었습니다"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/coupon_comple_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="'홍길동' 님"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/coupon_comple_phoneNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center|top|center_vertical"
            android:text="010-****-5678"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/coupon_comple_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_black"
            android:bufferType="spannable"
            android:paddingHorizontal="35dp"
            android:paddingVertical="10dp"
            android:text="현재 포인트&#10;8,900P"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/coupon_comple_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="20dp"
            android:bufferType="spannable"
            android:text="전자영수증을 발급하시겠습니까?"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <LinearLayout
            android:id="@+id/couponLayout_3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/couponLayout_1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnFinish_coupon_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="false"
                android:layout_weight="1"
                android:background="@drawable/round_button_left_c1c1c1"
                android:text="아니오"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnFinish_coupon_complete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="false"
                android:layout_weight="1"
                android:background="@drawable/round_button_right_000000"
                android:text="발급"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>