<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="568dp"
    android:layout_gravity="center"
    android:background="@drawable/round_background_popup"
    android:orientation="vertical"
    tools:context=".Activity.Pay.Card_announce_popupActivity">

    <LinearLayout
        android:id="@+id/Card_announce_card_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:visibility="gone">

        <TextView
            android:id="@+id/Card_announce_textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            android:text="신용카드를&#10;입력해주세요."
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/Card_announce_imageView"
            android:layout_width="wrap_content"
            android:layout_height="246dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/card_animation"/>

        <TextView
            android:id="@+id/Card_announce_textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="35dp"
            android:layout_weight="1"
            android:bufferType="spannable"
            android:gravity="center"
            android:lineSpacingExtra="7dp"
            android:text="카드를 그림과 같이 끝까지 삽입하고&#10;'결제 진행' 버튼을 눌러주세요"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37.5dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Card_announce_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/round_button_left_c1c1c1"
                android:text="취소"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <Button
                android:id="@+id/Card_announce_btn_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/round_button_right_eb5061"
                android:text="결제 진행"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Card_announce_samsungpay_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:visibility="visible">

        <TextView
            android:id="@+id/Card_announce_samsungpay_textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:gravity="center"
            android:text="결제 안내"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/Card_announce_samsungpay_imageView"
            android:layout_width="203dp"
            android:layout_height="287dp"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:src="@drawable/samsungpay_animation"/>

        <TextView
            android:id="@+id/Card_announce_samsungpay_textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="28dp"
            android:layout_weight="1"
            android:bufferType="spannable"
            android:gravity="center"
            android:lineSpacingExtra="7dp"
            android:paddingTop="10dp"
            android:text="'결제 진행'버튼을 누른 후,&#10;삼성페이 설정이 된 스마트폰 뒷면을&#10;하단 리더기에 접촉해주세요"
            android:textColor="@color/black"
            android:textSize="22dp"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/card_announce_samsungpay_textView3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="70dp"
            android:layout_weight="1"
            android:bufferType="spannable"
            android:gravity="center"
            android:lineSpacingExtra="7dp"
            android:text="삼성페이 설정이 된 스마트폰 뒷면을&#10;하단 리더기에 접촉해주세요"
            android:textColor="@color/black"
            android:textSize="22dp"
            tools:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37.5dp"
            android:layout_marginTop="18dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Card_announce_samsungpay_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/round_button_left_c1c1c1"
                android:text="취소"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <Button
                android:id="@+id/Card_announce_samsungpay_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/round_button_right_eb5061"
                android:text="결제 진행"
                android:textSize="16dp"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>