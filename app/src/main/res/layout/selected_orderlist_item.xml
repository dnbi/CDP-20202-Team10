<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:background="@drawable/selected_item_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="21dp">

        <TextView
            android:id="@+id/menuName"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/minusButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingTop="5dp"
            android:scaleType="center"
            android:src="@drawable/ic_vector_button_minus"
            android:background="@null"
            />

        <TextView
            android:id="@+id/countView"
            android:textStyle="bold"
            android:layout_width="40dp"
            android:textSize="30dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/plusButton"
            android:layout_width="35dp"
            android:scaleType="center"
            android:paddingTop="5dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_vector_button_plus"
            android:background="@null"/>

        <TextView
            android:id="@+id/priceView"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:gravity="center"
            android:background="@null"/>

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/delete_item_btn"
            android:textColor="@color/white" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/menu_optionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:gravity="center"
            android:text="옵션"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>



</LinearLayout>