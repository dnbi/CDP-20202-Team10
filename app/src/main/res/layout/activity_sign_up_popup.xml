<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="307dp"
    android:layout_height="375dp"
    android:background="@drawable/round_background_popup"
    android:orientation="vertical"
    tools:context=".Activity.Sign.SignUpPopupActivity">

    <TextView
        android:layout_width="307dp"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center"
        android:text="회원가입이 \n완료되었습니다."
        android:textColor="@color/black"
        android:textSize="25dp" />

    <Button
        android:id="@+id/signUpDoneButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round_button_000000"
        android:gravity="center"
        android:text="확 인"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

</LinearLayout>