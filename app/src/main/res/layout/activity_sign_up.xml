<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Sign.SignUpActivity">

    <ScrollView
        android:layout_weight="11"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_marginTop="140dp"
            android:layout_marginBottom="120dp"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="9"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="상호명"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:text="상호명"
                android:id="@+id/editBizName"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:textSize="20dp"
                android:inputType="text"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사업자 등록번호"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:text="5001020001"
                android:id="@+id/editBizNum"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:inputType="number"
                android:textSize="20dp"
                android:maxLength="10"
                android:layout_width="match_parent"
                android:layout_height="45dp"
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:text="1234567"
                android:id="@+id/editSignUpPassword"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:inputType="textPassword"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호 확인"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <EditText
                android:text="1234567"
                android:id="@+id/editSignUpPassword2"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:inputType="textPassword"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이메일주소"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0dp"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="20dp"
                android:maxLines="1"
                android:text="test@mobilekiosk.co.kr"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="휴대폰번호"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp" />
            <EditText
                android:text="01085900001"
                android:id="@+id/editSignUpHP"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:inputType="number"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사업장주소"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText

                android:id="@+id/editBizAddress"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:text="대구시 달서구 달서대로 675 계명문화대학교 복지관 1층"
                android:textSize="20dp" />


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/signUpConfirmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/ripple_black"
            android:gravity="center"
            android:text="확 인"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </LinearLayout>

</LinearLayout>