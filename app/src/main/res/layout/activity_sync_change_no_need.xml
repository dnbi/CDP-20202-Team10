<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/round_background_popup"
    android:orientation="vertical"
    tools:context=".Activity.Admin.SyncChangeNoNeedActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/warning_icon_card_fail"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/warning_triangle_icon_blue" />

        <TextView
            android:id="@+id/sync_change_no_textview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:gravity="center"
            android:text="현재 데이터가\n이미 최신 데이터 입니다"
            android:textColor="#323232"
            android:textSize="20dp"
            android:lineSpacingExtra="7dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/sync_change_no_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="@drawable/round_button_000000"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="20dp" />
</LinearLayout>